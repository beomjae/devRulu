<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%= image_tag @post.image_url(:large) %>
</p>

<p>
  <strong>User:</strong>
  <%= image_tag @post.user.avatar_url(:normal) %>
  <%= link_to @post.user.email, @post.user %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
