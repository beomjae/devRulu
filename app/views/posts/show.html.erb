<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <%= image_tag @post.image_url().to_s %>
</p>
<p>
  <strong>User:</strong>
  <%= image_tag @post.user.avatar_url().to_s %>
  <%= @post.user.email %>
</p>

<p>
  <strong>Tags:</strong>
  <%= tag_list @post.tag_list %>

  <button class="likePost btn" data-post-id="<%= @post.id %>">
    like <span>[<%= @post %>]</span>
  </button>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
